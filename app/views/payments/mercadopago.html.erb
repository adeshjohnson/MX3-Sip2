<div align="right"><%= image_tag("/images/logo/mercadopago-co.gif", :style => 'border-style:none', :title => "MercadoPago") %></div>

<%= form_tag :action => 'mercadopago_pay' do %>
    <%= _('Please_enter_amount_to_update_your_balance') %>*: <%= text_field_tag 'amount', @mp_default_amount, "class" => "input", :size => "8", :maxlength => "8" %> <%= @currency %>
    <br><br>
    <%= submit_tag _('Confirm'), :disable_with => _('Processing..') %>
<% end %>

<br>
<% if @mp_min_amount.to_f > 0.0 %>
    <div class="simple">* <%= _('Minimum_amount') %>: <%= nice_number @mp_min_amount %> <%= @currency %></div>
<% end %>
<% if @mp_max_amount.to_f > 0.0 %>
    <div class="simple">* <%= _('Maximum_amount') %>: <%= nice_number @mp_max_amount %> <%= @currency %></div>
<% end %>
